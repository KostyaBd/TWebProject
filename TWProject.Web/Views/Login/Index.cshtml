@using System.Web.Optimization
@model TWProject.Web.Models.UserLogin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CarRent Login";
}

<style>
    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -40%);
        width: 500px;
        height: 360px;
        background: white;
        border-radius: 2px;
    }

        .center h1 {
            text-align: center;
            padding: 0 0 2px 0;
            
        }

        .center form {
            padding: 0 60px;
            box-sizing: border-box;
        }

    .login-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -40%);
        width: 500px;
        height: 400px;
        background: white;
        border-radius: 2px;
    }

        .login-container h2 {
            text-align: center;
            padding: 0 0 2px 0;
            border-bottom: 1px solid silver;
        }

        .login-container .form-group {
            margin-bottom: 15px;
            position: relative;
            border-bottom: 2px solid #adadad;
            margin: 30px 0;
        }

        .login-container label {
            position: absolute;
            top: 50%;
            left: 5px;
            color: #adadad;
            transform: translateY(-50%);
            font-size: 16px;
            pointer-events: none;
            transition: .5s;
        }

        .login-container input:focus ~ label,
        .login-container input:valid ~ label {
            top: -5px;
            color: #2691d9;
        }

        .login-container span::before {
            content: '';
            position: absolute;
            top: 40px;
            left: 0;
            width: 100%;
            height: 2px;
            background: #2691d9;
        }

        .login-container input {
            width: 100%;
            padding: 0 5px;
            height: 40px;
            font-size: 16px;
            border: none;
            background: none;
            outline: none;
        }

        .login-container button {
            width: 100%;
            height: 50px;
            border: 1px solid;
            background-color: #007bff;
            border-radius: 15px;
            font-size: 16px;
            color: #e9f4fb;
            font-weight: 700;
            cursor: pointer;
            outline: none;
        }

        .login-container button:hover {
            border-color: #2691d9;
            transition: .5s;
        }

        .user-signup {
            margin: 30px 0;
            text-align: center;
            font-size: 16px;
            color: #666666;
        }

            .user-signup a {
                color: #2691d9;
                text-decoration: none;
                display: flex;
                justify-content: center;
                align-items: center;
                padding:30px;
            }

    .validation-summary-errors {
        color: red;
        margin-bottom: 10px;
    }
    button[type="submit"] {
        width: 100%;
        height: 50px;
        border: 1px solid;
        background-color: #2691d9;
        border-radius: 15px;
        font-size: 16px;
        color: #e9f4fb;
        font-weight: 700;
        cursor: pointer;
        outline: none;
    }


</style>

<div class="hero" style="background-image: url('/images/hero_1_a.jpg');">

    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">

                <div class="center">
                    <h1> Log in</h1>

                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                        <div class="form-group">
                            @Html.LabelFor(m => m.Credential)
                            @Html.TextBoxFor(m => m.Credential, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>

                        <button type="submit">Login</button>
                        <div class="users_signup">
                            You don't have an account? <a href="@Url.Action("Index","Register")">Sign up</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
